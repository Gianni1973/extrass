<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@*com.google.android.projection.gearhead:style/Widget.Boardwalk.Card.SecondaryScreen"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipChildren="false"
    android:clipToPadding="false">
    <include
        layout="@*com.google.android.projection.gearhead:layout/stream_item_dismiss_container"
        android:layout_width="0.0dip"
        android:layout_height="0.0dip"
        android:visibility="gone" />
    <FrameLayout
        android:id="@*com.google.android.projection.gearhead:id/primary_action_container_background"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:addStatesFromChildren="true"
        android:background="@*com.google.android.projection.gearhead:drawable/gearhead_secondary_screen_card_ripple_background"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:foreground="@*com.google.android.projection.gearhead:drawable/gearhead_secondary_screen_card_focus_foreground">
        <View
            android:id="@*com.google.android.projection.gearhead:id/primary_action_container_ripple"
            android:layout_width="0.0dip"
            android:layout_height="0.0dip"
            android:background="@*com.google.android.projection.gearhead:drawable/stream_item_car_controller_ripple" />
        <LinearLayout
            android:id="@*com.google.android.projection.gearhead:id/primary_action_container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="@*com.google.android.projection.gearhead:dimen/gearhead_baseline_grid_3x"
            android:focusable="true"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0">
                <LinearLayout
                    android:id="@*com.google.android.projection.gearhead:id/boardwalk_action_content_view"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@*com.google.android.projection.gearhead:id/primary_action_icon"
                        android:layout_width="@*com.google.android.projection.gearhead:dimen/gearhead_secondary_screen_card_primary_action_icon_size"
                        android:layout_height="@*com.google.android.projection.gearhead:dimen/gearhead_secondary_screen_card_primary_action_icon_size"
                        android:layout_marginStart="@*com.google.android.projection.gearhead:dimen/gearhead_baseline_grid_3x"
                        android:focusable="false"
                        android:padding="@*com.google.android.projection.gearhead:dimen/gearhead_secondary_screen_card_primary_action_icon_padding" />
                    <TextView
                        android:id="@*com.google.android.projection.gearhead:id/title"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@*com.google.android.projection.gearhead:dimen/gearhead_baseline_grid_3x"
                        android:layout_marginEnd="@*com.google.android.projection.gearhead:dimen/gearhead_baseline_grid_3x"
                        android:maxLines="1"
                        android:textAppearance="@*com.google.android.projection.gearhead:style/TextAppearance.Boardwalk.Display2.SecondaryScreen" />
                </LinearLayout>
            </FrameLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@*com.google.android.projection.gearhead:dimen/gearhead_baseline_grid_1.5x"
                android:layout_marginEnd="@*com.google.android.projection.gearhead:dimen/gearhead_baseline_grid_1.5x"
                android:layout_marginBottom="@*com.google.android.projection.gearhead:dimen/gearhead_baseline_grid_1.5x"
                android:orientation="vertical">
                <TextView
                    android:id="@*com.google.android.projection.gearhead:id/text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textAppearance="@*com.google.android.projection.gearhead:style/TextAppearance.Boardwalk.Body1.SecondaryScreen" />
                <TextView
                    android:id="@*com.google.android.projection.gearhead:id/text2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@*com.google.android.projection.gearhead:dimen/gearhead_baseline_grid_0.5x"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textAppearance="@*com.google.android.projection.gearhead:style/TextAppearance.Boardwalk.Body2.SecondaryScreen" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</androidx.cardview.widget.CardView>