<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@*com.google.android.projection.gearhead:id/hun_view"
    android:layout_width="fill_parent"
    android:layout_height="164.0dip"
    android:layout_gravity="center_horizontal"
    android:layout_marginStart="12.0dip"
    android:layout_marginTop="12.0dip"
    android:layout_marginEnd="12.0dip"
    android:background="@*com.google.android.projection.gearhead:drawable/hun_background">
    <RelativeLayout
        android:id="@*com.google.android.projection.gearhead:id/notification_info"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:background="@*com.google.android.projection.gearhead:drawable/hun_rounded_top_left_ripple"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">
        <FrameLayout
            android:id="@*com.google.android.projection.gearhead:id/icon_container"
            android:layout_width="112.0dip"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">
            <include
                layout="@*com.google.android.projection.gearhead:layout/hun_badged_rounded_icon"
                android:layout_width="67.0dip"
                android:layout_height="67.0dip"
                android:layout_marginStart="@*com.google.android.projection.gearhead:dimen/gearhead_baseline_grid_3x"
                android:layout_marginTop="@*com.google.android.projection.gearhead:dimen/gearhead_baseline_grid_3x" />
        </FrameLayout>
        <TextView
            android:id="@*com.google.android.projection.gearhead:id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@*com.google.android.projection.gearhead:dimen/gearhead_baseline_grid_2x"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@*com.google.android.projection.gearhead:style/TextAppearance.Boardwalk.Body1"
            android:layout_toRightOf="@*com.google.android.projection.gearhead:id/icon_container"
            android:layout_alignParentTop="true" />
        <TextView
            android:id="@*com.google.android.projection.gearhead:id/text"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="2.0dip"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@*com.google.android.projection.gearhead:style/TextAppearance.Boardwalk.Body3.Hun2"
            android:layout_toRightOf="@*com.google.android.projection.gearhead:id/icon_container"
            android:layout_below="@*com.google.android.projection.gearhead:id/title" />
    </RelativeLayout>
    <LinearLayout
        android:id="@*com.google.android.projection.gearhead:id/actions_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@*com.google.android.projection.gearhead:dimen/gearhead_baseline_grid_2x"
        android:layout_marginBottom="@*com.google.android.projection.gearhead:dimen/gearhead_baseline_grid_2x"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">
        <FrameLayout
            android:id="@*com.google.android.projection.gearhead:id/primary_action_button_holder"
            android:layout_width="wrap_content"
            android:layout_height="56.0dip"
            android:layout_marginStart="@*com.google.android.projection.gearhead:dimen/gearhead_baseline_grid_3x"
            android:background="@*com.google.android.projection.gearhead:drawable/hun_answer_call_action_button_background"
            android:focusable="true"
            android:foreground="@*com.google.android.projection.gearhead:drawable/notification_action_button_focus_ring"
            android:paddingStart="@*com.google.android.projection.gearhead:dimen/gearhead_baseline_grid_7.5x"
            android:paddingEnd="@*com.google.android.projection.gearhead:dimen/gearhead_baseline_grid_7.5x">
            <TextView
                android:id="@*com.google.android.projection.gearhead:id/primary_action_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="@*com.google.android.projection.gearhead:style/TextAppearance.Boardwalk.Body3.Hun1" />
        </FrameLayout>
        <FrameLayout
            android:id="@*com.google.android.projection.gearhead:id/secondary_action_button_holder"
            android:layout_width="wrap_content"
            android:layout_height="56.0dip"
            android:layout_marginStart="@*com.google.android.projection.gearhead:dimen/gearhead_baseline_grid_3x"
            android:background="@*com.google.android.projection.gearhead:drawable/hun_decline_call_action_button_background"
            android:focusable="true"
            android:foreground="@*com.google.android.projection.gearhead:drawable/notification_action_button_focus_ring"
            android:paddingStart="@*com.google.android.projection.gearhead:dimen/gearhead_baseline_grid_7.5x"
            android:paddingEnd="@*com.google.android.projection.gearhead:dimen/gearhead_baseline_grid_7.5x">
            <TextView
                android:id="@*com.google.android.projection.gearhead:id/secondary_action_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="@*com.google.android.projection.gearhead:style/TextAppearance.Boardwalk.Body3.Hun1" />
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>