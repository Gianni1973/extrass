<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <View
        android:id="@*com.google.android.projection.gearhead:id/activity"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />
    <View
        android:id="@*com.google.android.projection.gearhead:id/notification_center"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />
    <View
        android:id="@*com.google.android.projection.gearhead:id/status_bar"
        android:layout_width="fill_parent"
        android:layout_height="@*com.google.android.projection.gearhead:dimen/status_bar_height"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"/>
    <View
        android:id="@*com.google.android.projection.gearhead:id/demand"
        android:alpha="0.0"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@*com.google.android.projection.gearhead:id/status_bar"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />
    <View
        android:id="@*com.google.android.projection.gearhead:id/notification"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="1.0dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />
    <View
        android:id="@*com.google.android.projection.gearhead:id/rail"
        android:layout_width="@*com.google.android.projection.gearhead:dimen/legacy_facet_bar_buttons_margin_bottom"
        android:layout_height="@*com.google.android.projection.gearhead:dimen/rail_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"/>
    <View
        android:id="@*com.google.android.projection.gearhead:id/ime"
        android:layout_width="fill_parent"
        android:layout_height="@*com.google.android.projection.gearhead:dimen/car_ime_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>