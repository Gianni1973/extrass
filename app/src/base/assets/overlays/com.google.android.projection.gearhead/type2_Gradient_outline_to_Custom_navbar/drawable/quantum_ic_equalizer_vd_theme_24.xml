<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >


    <item>
        <shape
            android:shape="rectangle">
    <gradient
        android:angle="180"
        android:centerColor="@*com.google.android.projection.gearhead:color/google_dark_red900"
        android:endColor="@*com.google.android.projection.gearhead:color/google_dark_yellow900"
        android:startColor="@*com.google.android.projection.gearhead:color/google_dark_green900"
        android:type="linear" />
    <corners
        android:radius="0dp"/>
</shape>
    </item>

    <item
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp">
        <shape android:shape="rectangle" >
            <solid android:color="#000" />
            <corners android:radius="8dp"/>
        </shape>
    </item>

</layer-list>